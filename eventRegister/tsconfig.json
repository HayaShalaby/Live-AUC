{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "esnext", // Or 'commonjs', depending on your setup
    "moduleResolution": "node",
    "target": "es5", // Or higher, depending on your requirements
    "lib": [ "dom", "esnext" ],
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
